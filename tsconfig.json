{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist-server",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "server/types/*"
      ]
    }
  },
  "include": [
    "server/**/*",
    "src/app/shared/model/**/*"
  ]
}
